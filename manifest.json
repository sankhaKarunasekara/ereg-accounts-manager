{
	"manifest_version": 2,
	"name": "Ereg Accounts Manager Extention",
	"description": "Chrome Extension for managing Expiry dates of trade accounts in Sri Lanka Customs Electronic Trader Registration portal",
	"version": "0.0.1",
	"author": "@sankhaKarunasekara",
	"background": {
		"scripts": [
			"popup.js"
		],
		"persistent": true
	},
	"permissions": [
		"*://www.customs.gov.lk/registrations/adminApplicationView/*",
		"*://customs.gov.lk/registrations/adminApplicationView/*",
		"*://ereg.customs.gov.lk/registrations/adminApplicationView/*",
		"*://https://ereg.customs.gov.lk/registrations/loadRMUAdmin/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "favicon-16x16.png",
		"32": "favicon-32x32.png",
		"96": "favicon-96x96.png",
		"144": "favicon-144x144.png"
	},
	"web_accessible_resources": [
		"icon.png"
	]
}